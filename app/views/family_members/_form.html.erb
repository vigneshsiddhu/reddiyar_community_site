<%= simple_form_for(@family_member) do |f| %>
<%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :relationship %>
    <%= f.input :blood_group %>
    <%= f.input :age %>
    <%= f.input :education %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>