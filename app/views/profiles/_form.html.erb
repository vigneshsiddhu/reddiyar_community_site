<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :mobile %>
    <%= f.input :city %>
    <%= f.input :pin_code %>
    <%= f.input :occupation %>
    <%= f.input :blood_group %>
    <%= f.input :address %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
