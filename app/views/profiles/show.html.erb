<div style="margin: 0 30%; padding: 3%; box-shadow: 0 0 8px #d6d6d6;">
  <p id="notice"><%= notice %></p>
  <h1>Profile Details</h1>
  <p>
    <strong>City:</strong>
    <%= @profile.city %>
  </p>

  <p>
    <strong>Gender:</strong>
    <%= @profile.gender %>
  </p>

  <p>
    <strong>Pin code:</strong>
    <%= @profile.pin_code %>
  </p>

  <p>
    <strong>Occupation:</strong>
    <%= @profile.occupation %>
  </p>

  <p>
    <strong>Blood group:</strong>
    <%= @profile.blood_group %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @profile.address %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @profile.email %>
  </p>

  <%= link_to 'Edit', edit_profile_path(@profile), {:class => 'btn btn-default'} %>
  <%= link_to 'Home', root_path, {:class => 'btn btn-default'} %>
</div>